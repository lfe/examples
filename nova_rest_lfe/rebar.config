{erl_opts, [debug_info]}.

{deps, [
  {lfe, {git, "http://github.com/rvirding/lfe", {branch, "develop"}}},
  {logjam, {git, "https://github.com/lfex/logjam", {branch, "release/1.0.x"}}},
  {nova, "0.6.2"}
]}.

{plugins, [
  {rebar3_lfe, {git, "http://github.com/lfe-rebar3/rebar3_lfe", {branch, "master"}}},
  rebar3_auto
]}.

{provider_hooks, [
  {pre, [{compile, {lfe, compile}}]}
]}.
  
{relx, [{release, {'nova_rest_lfe', "0.1.0"},
         ['nova_rest_lfe',
          lfe,
          logjam,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
